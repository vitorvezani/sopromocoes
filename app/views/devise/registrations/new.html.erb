<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>

  <h2 class="form-signin-heading">Por favor, registre-se</h2>
  <hr>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control", placeholder: "Endereço de Email", autofocus: true, required: true %>
  <br>
  <%= f.label 'Senha' %>
  <% if @minimum_password_length %>
    <em>(tamanho mínimo <%= @minimum_password_length %> caracteres )</em>
  <% end %><br />
  <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off", required: true %>

  <%= f.label :password_confirmation, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control", placeholder: "Confirmação da Senha", autocomplete: "off", required: true %>

  <%= f.submit "Registrar", class: "btn btn-lg btn-primary btn-block" %> <hr/>
  <%= render "devise/shared/links" %>
<% end %>
