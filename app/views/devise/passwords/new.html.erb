<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin form-forgot-password" }) do |f| %>
  <%= devise_error_messages! %>
	
	<h2 class="form-signin-heading">Forgot your password?</h2>

  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Adress", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %> <hr/>
  </div>

  <%= render "devise/shared/links" %>

<% end %>