<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin form-forgot-password" }) do |f| %>
  <%= devise_error_messages! %>

	<h2 class="form-signin-heading">Esqueceu sua senha?</h2>

  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Endereço de Email", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Me envie instruções para reset de senha", class: "btn btn-lg btn-primary btn-block" %> <hr/>
  </div>

  <%= render "devise/shared/links" %>

<% end %>
