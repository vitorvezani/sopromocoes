<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Por favor, logue-se</h2>

  <hr>
  <%= render 'devise/shared/social_login' %>
  <hr>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control", placeholder: "EndereÃ§o de Email", autofocus: true, required: true %>

  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off", required: true %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label 'Lembrar-me' %>
    </div>
  <% end -%>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %> <hr/>
  <%= render "devise/shared/links" %>
<% end %>
