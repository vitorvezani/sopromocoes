<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
  <ul id="login-dp" class="dropdown-menu">
<li>
  <div class="row">
    <div class="col-md-12">
      Login via
      <div class="social-buttons">
        <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-fb" do %>
        <span class="fa fa-facebook"></span> Facebook
        <% end %>
      </div>
      <p>ou</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form", id:"login-nav", accept: { charset: "UTF-8"}}) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, class: "form-control", placeholder: "EndereÃ§o de Email", autofocus: true, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off", required: true %>
        <div class="help-block text-right"><a href="">Forget the password ?</a></div>
      </div>
      <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <label>
        <input type="checkbox"> Lembrar-me
        </label>
      </div>
      <% end %>
      <% end %>
    </div>
    <div class="bottom text-center">
      Novo aqui ? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    </div>
  </div>
</li>
