<%= form_tag({action: :upload}, { multipart: true, class: 'form-signin form-forgot-password' }) do %>
	<h1 class='form-signin-heading'>Importacao de ofertas e cupons</h1>
  <%= file_field_tag 'file', class: 'form-control' %> </br>
  <%= select_tag 'affiliate', options_for_select([ 'Lomadee' ], 'Lomadee'), class: 'form-control' %> </br></br>
	<%= select_tag 'file_type', options_for_select([ 'XML', 'XLS' ], 'XML'), class: 'form-control' %> </br></br>
  <div><%= submit_tag 'Enviar', accept: 'xls', class: 'btn btn-lg btn-primary btn-block' %></div>
<% end %>
