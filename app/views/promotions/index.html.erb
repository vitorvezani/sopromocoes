<div class="page-header">
  <%= link_to new_promotion_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nova Promoção
  <% end %>
  <h1>Todas as promoções</h1>
</div>

<% @promotions.each_slice(3) do |three_promotions| %>
  <div class="row">
    <% three_promotions.each do |promotion| %>
      <div class="col-md-4">
        <%= render partial: "promotions/shared/promotion", locals: {promotion: promotion} %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="col-md-9 col-md-offset-4">
  <%= will_paginate @promotions, renderer: BootstrapPagination::Rails %>
</div>