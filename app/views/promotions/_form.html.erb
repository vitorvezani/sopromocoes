<%= form_for(@promotion, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @promotion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@promotion.errors.count, "error") %> prohibited this promotion from being saved:</h4> <!-- TODO -->
      <ul>
      <% @promotion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label 'Título', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Descrição', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :image_url, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :image_url, class: "form-control", id: "img-url" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Loja', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.collection_select :store_id, Store.all, :id, :name, { prompt: 'Por favor, selecione a loja da oferta' }, { class: "form-control" } %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label 'Preço', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :price_to, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Preço de', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :price_from, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Preço boleto', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :price_billet, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Link', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :url, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Termina em', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :end_at, class: "form-control", data: { provide: 'datepicker' } %>
        </div>
      </div>
    </div>
  </div>
  <div id="load-img-here"></div>
  <hr>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-7">
      <%= f.submit 'Criar oferta', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
