<div class="page-header">
  <%= link_to new_coupon_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Coupon
  <% end %>
  <h1>Listing coupons</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Url</th>
            <th>Begin at</th>
            <th>End at</th>
            <th>Enabled</th>
            <th>Rules url</th>
            <th>Affiliate</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @coupons) do |coupon| %>
            <td><%= coupon.name %></td>
            <td><%= coupon.code %></td>
            <td><%= coupon.url %></td>
            <td><%= coupon.begin_at %></td>
            <td><%= coupon.end_at %></td>
            <td><%= coupon.enabled %></td>
            <td><%= coupon.rules_url %></td>
            <td><%= coupon.affiliate %></td>
            <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
