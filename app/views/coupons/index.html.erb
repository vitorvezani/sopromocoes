<div class="page-header">
  <%= link_to new_coupon_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Coupon
  <% end %>
  <h1>Listing coupons</h1>
</div>

<% @coupons.each_slice(3) do |coupons| %>
  <div class="row">
  <% coupons.each do |coupon| %>
    <div class="col-md-4" id=<%= coupon.try(:store?).nil? ? "green" : coupon.store.color %>>
        <div class="panel panel-danger coupon">
          <div class="panel-heading" id="head">
            <div class="panel-title" id="title">
                <a href="#">Submarino</a>
                <span class="hidden-xs"><%= link_to coupon.name, coupon %></span>
                <span class="visible-xs"><%= link_to coupon.name, coupon %></span>
            </div>
          </div>
          <div class="panel-footer">
            <div class="coupon-code">
                Code: <%= coupon.code %>
                <span class="print">
                    <a href="#" class="btn btn-link" onclick="PrintElem('#mydiv')"><i class="fa fa-lg fa-print"></i> Print Coupon</a>
                </span>
            </div>
            <div class="exp">Expires: <%= coupon.end_at.to_s(:long) %></div>
            <div class="exp">Rules: <a href=<%= coupon.rules_url %> >Regras</a></div>
            <% if current_user.try(:admin?) %>
              <br>
              <%= link_to "Editar", edit_coupon_path(coupon) %> |
              <%= link_to "Excluir", coupon, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
<% end %>
