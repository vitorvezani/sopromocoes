<%= form_for(@coupon, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @coupon.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@coupon.errors.count, "error") %> prohibited this coupon from being saved:</h4>

      <ul>
      <% @coupon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :code, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :begin_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :begin_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :end_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :enabled, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :enabled, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rules_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :rules_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :affiliate, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :affiliate, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.collection_select :store_id, Store.all, :id, :name, {:prompt => 'Por favor selecione a loja da cupom'}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
