<!-- http://bootsnipp.com/snippets/featured/css-coupons -->
<div class="row page-header">
  <div class="col-md-6">
    <h3><%= @coupon.name.titleize %></h3>
  </div>
  <div class="col-md-6">
    <div class="pull-right">
      <%= render 'shared/security/edit', path: edit_coupon_path(@coupon) if owns_record(@coupon) or is_admin? %>
      <%= render 'shared/security/delete', item: @coupon if owns_record(@coupon) or is_admin? %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "coupons/shared/coupon", coupon: @coupon %>
  </div>
  <%= render "shared/comments", comments: @comments, new_comment: @new_comment %>
</div>
