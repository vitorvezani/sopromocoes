<div class="page-header">
  <% if is_logged_user(@user) %>
    <%= link_to edit_user_registration_path(@user), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>Editar
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="well profile">
      <div class="profile-header-container">
        <div class="profile-header-img">
          <img class="img-circle" src=<%= @user.image_url%> />
          <!-- badge -->
          <div class="rank-label-container">
            <span class="label label-default rank-label">100 puntos</span>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="col-xs-12">
          <h2><%= @user.name_or_username %></h2>
          <p><strong>Sobre: </strong> Web Designer / UI. </p>
          <p><strong>Email: </strong> <%= @user.email %></p>
          <p><strong>Tags: </strong>
            <span class="tags">celulares</span>
            <span class="tags">tvs</span>
            <span class="tags">roupas</span>
          </p>
        </div>
      </div>
        <div class="btn-group dropup btn-block center-block">
            <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options </button>
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu text-left" role="menu">
              <li><a href="#"><span class="fa fa-envelope pull-right"></span> Send an email </a></li>
              <li><a href="#"><span class="fa fa-list pull-right"></span> Add or remove from a list  </a></li>
              <li class="divider"></li>
              <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this user for spam</a></li>
              <li class="divider"></li>
              <li><a href="#" class="btn disabled" role="button"> Unfollow </a></li>
            </ul>
          </div>
      <div class="col-xs-12 divider text-center">
        <div class="col-xs-12 col-sm-4 emphasis">
              <h2><strong> 0 </strong></h2>
              <p><small>Seguidores</small></p>
            <!--
            <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Follow </button>
          -->
        </div>
        <div class="col-xs-12 col-sm-4 emphasis">
          <h2><strong>0</strong></h2>
          <p><small>Pontos</small></p>
            <!--
            <button class="btn btn-info btn-block"><span class="fa fa-user"></span> View Profile </button>
          -->
        </div>
        <div class="col-xs-12 col-sm-4 emphasis">
          <h2><strong>0</strong></h2>
          <p><small>Ofertas & Cupons</small></p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <ul id="myTabs" class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#activities" id="activities-tab" role="tab" data-toggle="tab" aria-controls="activities" aria-expanded="false">Atividades <span class="badge"><%= @activities.count %></span></a></li>
      <li role="presentation" ><a href="#promotions" role="tab" id="promotions-tab" data-toggle="tab" aria-controls="promotions" aria-expanded="true">Promoções <span class="badge"><%= @promotions.count %></span></a></li>
      <li role="presentation" ><a href="#coupons" role="tab" id="coupons-tab" data-toggle="tab" aria-controls="coupons" aria-expanded="true">Cupons <span class="badge"><%= @coupons.count %></span></a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div role="tabpanel" class="tab-pane fade active in" id="activities" aria-labelledby="activities-tab">
        <%= render 'shared/activities' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="promotions" aria-labelledby="promotions-tab">
        <%= render 'promotions/shared/promotions' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="coupons" aria-labelledby="coupons-tab">
        <%= render 'coupons/shared/coupons' %>
      </div>
    </div>
  </div>
</div>
