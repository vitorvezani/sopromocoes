<div class="row">
  <div class="col-xs-12 col-md-4">
    <div class="well profile">
      <div class="profile-header-container">
        <div class="profile-header-img">
          <img class="img-circle" src=<%= @user.image_url%> />
          <!-- badge -->
          <div class="rank-label-container">
            <span class="label label-default rank-label">100 pontos</span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="col-xs-12 text-center">
            <h2><%= @user.name_or_username %></h2>
            <p> Engenheiro de Computação / Software </p>
            <p><%= @user.email %></p>
            <p>
              <span class="tags">celulares</span>
              <span class="tags">tvs</span>
              <span class="tags">roupas</span>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
          <%= render 'users/shared/options_button' %>
        </div>
      </div>
      <div class="col-xs-12 divider text-center">
        <div class="col-xs-12 col-sm-6 emphasis">
          <h2><strong> 0 </strong></h2>
          <p><small>Seguidores</small></p>
          <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Seguir </button>
        </div>
        <div class="col-xs-12 col-sm-6 emphasis">
          <h2><strong><%= @user.promotions_count + @user.coupons_count %></strong></h2>
          <p><small>Ofertas & Cupons</small></p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <ul id="myTabs" class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#activities" id="activities-tab" role="tab" data-toggle="tab" aria-controls="activities" aria-expanded="false">Atividades <span class="badge"><%= @activities.count %></span></a></li>
      <li role="presentation" ><a href="#promotions" role="tab" id="promotions-tab" data-toggle="tab" aria-controls="promotions" aria-expanded="true">Ofertas <span class="badge"><%= @user.promotions_count %></span></a></li>
      <li role="presentation" ><a href="#coupons" role="tab" id="coupons-tab" data-toggle="tab" aria-controls="coupons" aria-expanded="true">Cupons <span class="badge"><%= @user.coupons_count %></span></a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div role="tabpanel" class="tab-pane fade active in" id="activities" aria-labelledby="activities-tab">
        <%= render 'shared/activities' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="promotions" aria-labelledby="promotions-tab">
        <%= render 'promotions/shared/promotions' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="coupons" aria-labelledby="coupons-tab">
        <%= render 'coupons/shared/coupons' %>
      </div>
    </div>
  </div>
</div>
